		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="29*"/>
			<ColumnDefinition Width="255*"/>
			<ColumnDefinition Width="86*"/>
			<ColumnDefinition Width="30*"/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="15*"/>
			<RowDefinition Height="65*"/>
			<RowDefinition Height="46*"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="15*"/>
		</Grid.RowDefinitions>
		<Grid VerticalAlignment="Center" Grid.Column="1" HorizontalAlignment="Center" Grid.Row="1" Grid.ColumnSpan="2" >
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="18"/>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>
			<TextBlock HorizontalAlignment="Right" TextWrapping="NoWrap" Text="{Binding TimeProgressHours}" VerticalAlignment="Bottom" FontSize="70" Margin="0,0,0,-2" />
			<TextBlock x:Name="textBlock" HorizontalAlignment="Left" TextWrapping="NoWrap"  Text=":" VerticalAlignment="Bottom" FontSize="48" Margin="4,0,0,8" Grid.Column="1" Foreground="#FF818181" Visibility="{Binding IsTracking, Converter={StaticResource BooleanToVisibilityConverter}}"/>
			<TextBlock HorizontalAlignment="Left" TextWrapping="NoWrap" Text="{Binding TimeProgressMinutes, ConverterParameter=\{0:00\}, Converter={StaticResource StringFormatConverter}}" VerticalAlignment="Bottom" FontSize="48" Grid.Column="2" Foreground="#FF818181" Margin="0,0,0,4"/>
		</Grid>
		<Button Content="Stop" HorizontalAlignment="Stretch" VerticalAlignment="Center" Grid.Column="2" Height="69" Grid.Row="1" Visibility="Collapsed"/>
		<Grid Grid.Row="3" Grid.ColumnSpan="4" Margin="0,0.714,0,0">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="151*"/>
				<ColumnDefinition Width="88*"/>
				<ColumnDefinition Width="161*"/>
			</Grid.ColumnDefinitions>

		</Grid>
