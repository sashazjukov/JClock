<UserControl x:Name="userControl" x:Class="JClock.HourElement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:JClock"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="20">
    <Grid>
        <Rectangle Margin="1" Fill="Black"  StrokeThickness="1"></Rectangle>
        <TextBlock FontSize="10" Name="hourText" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#FFEEEEEE">10</TextBlock>
        <ProgressBar Name="HourProgressElement" Margin="2" Maximum="60" Value="40" Opacity="50" Background="#00E6E6E6" Foreground="#4C06B025" BorderBrush="#00BCBCBC"></ProgressBar>
        <!--Foreground="#4C06B025"-->
    </Grid>
</UserControl>
